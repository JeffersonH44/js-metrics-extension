{
    "name": "js-metrics-extension",
    "displayName": "js-metrics-extension",
    "description": "JavaScript software metrics extension",
    "version": "0.0.1",
    "publisher": "jeffersonh44",
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.halstead"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.halstead",
                "title": "Halstead metrics"
            }
        ]
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "jest",
        "compile-parser": "antlr4ts -lib ./src/parser/ ./src/parser/JavaScriptLexer.g4"
    },
    "devDependencies": {
        "@types/jest": "^22.2.0",
        "@types/node": "^7.0.43",
        "jest": "^22.4.2",
        "ts-jest": "^22.4.1",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.6"
    },
    "dependencies": {
        "antlr4ts": "^0.4.1-alpha.0",
        "antlr4ts-cli": "^0.4.0-alpha.4"
    }
}
